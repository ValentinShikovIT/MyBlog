@model int

<style>
    .head {
        text-align: center;
        padding-top: 20px;
    }

    .submitConfirm {
        background-color: red;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration:none;
    }

    .submitCancel {
        background-color: green;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .submitConfirm:hover {
            background-color: darkred;
        }
        .submitCancel:hover {
            background-color: forestgreen;
        }
</style>

<h1 class="head">Confirm Delete of Article?</h1>
<div style="text-align:center">
    <a asp-action="ConfirmDelete" asp-controller="Articles" asp-route-id="@Model" class="submitConfirm">Delete</a>
    <a asp-action="Index" asp-controller="Articles" class="submitCancel">Cancel</a>
</div>
